{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "npm: start-dev",
            "name": "Start Debug",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "sourceMapPathOverrides": {
                "webpack://_N_E/*": "${workspaceFolder}/*"
            },
            "sourceMaps": true,
            "smartStep": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome"
        },
        {
            "preLaunchTask": "npm: start-dev",
            "type": "node",
            "request": "attach",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "port": 9229
          }
    ]
}
